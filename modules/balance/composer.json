{
    "name": "wurin7i/balance",
    "description": "A pure double-entry accounting engine for Laravel with multi-division support",
    "type": "library",
    "keywords": [
        "accounting",
        "double-entry",
        "bookkeeping",
        "laravel",
        "balance"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "WuriN7i",
            "email": "wurin7i@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/console": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0",
        "pestphp/pest-plugin": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "WuriN7i\\Balance\\": "src/",
            "WuriN7i\\Balance\\Database\\Factories\\": "database/factories/",
            "WuriN7i\\Balance\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WuriN7i\\Balance\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "WuriN7i\\Balance\\Providers\\BalanceServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}